<AnalysisRule version="1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

    <!-- Rule for fingerprint -->
    <rules class="fingerprint" enabled="true">
        <rule name="captureImage">
            <events>
                <event name="captureImage" flags="pairable"/>
            </events>
        </rule>

        <rule name="identify" enabled="false">
            <events>
                <event name="identify"/>
            </events>
        </rule>

        <rule name="authenticate" type="performance">
            <events>
                <event name="receiveIrq" flags="begin"/>
                <event name="captureImage"/>
                <event name="identify"/>
                <event name="notifyIdentify" flags="over"/>
            </events>
        </rule>

        <rule name="poweron" type="workflow">
            <events>
                <event name="receiveIrq" flags="begin"/>
                <event name="captureImage" flags="required|pairable"/>
                <event name="identify" flags="optional"/>
                <event name="identify" flags="cancelled"/>
                <event name="notifyIdentify" flags="over"/>
            </events>
        </rule>

        <rule name="unlockScreenOn" type="performance">
            <events>
                <event name="receiveIrq" flags="begin"/>
                <event name="wakeUpDevice" timebase="receiveIrq"/>
                <event name="captureImage"/>
                <event name="identify"/>
                <event name="notifyIdentify" timebase="receiveIrq"/>
                <event name="notifyKeyguard"/>
                <event name="keyguardDone" timebase="notifyKeyguard"/>
                <event name="updateDisplayBrightness" timebase="wakeUpDevice" flags="over"/>
                <event name="notifyUserPresent" flags="over"/>
            </events>
        </rule>

        <rule name="unlockScreenOff" type="performance">
            <events>
                <event name="fingerprintWake" flags="begin"/>
                <event name="hideKeyguardByFingerprint"/>
                <event name="displayInit" flags="pairable"/>
                <event name="authenticated"/>
                <event name="authenticatedTimeout" flags="cancelled|optional"/>
                <event name="windowReady" flags="optional"/>
                <event name="wakeUp" flags="pairable"/>
                <event name="dismissColorFade" flags="nail"/>
                <event name="setColorFadeLevel"/>
                <event name="brightnessUpdate"/>
                <event name="applyBrightness"/>
                <event name="wakeUpIntercept" flags="cancelled|optional"/>
                <event name="wakeUpHookCancelled" flags="cancelled|optional"/>
                <event name="light" flags="pairable|over"/>
            </events>
        </rule>
    </rules>
    <!--xi:include href="analysis_rule_sub.xml"/-->
</AnalysisRule>
